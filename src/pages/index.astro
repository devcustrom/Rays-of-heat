---
import Random from "../components/random.vue";
const links = [
	{
		title: 'Женщина',
		short: 'Ж',
		link: '/woman',
		color: 'red'
	},
	{
		title: 'Мужчина',
		short: 'М',
		link: '/man',
		color: 'blue'
	}
]
---

<html lang="ru">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>Лучики тепла</title>
		<meta name="description" content="Всем нам нужны лучики тепла здесь они есть">
	</head>
	<body>
		<section class="flex min-h-screen">
			<div class="container text-center h-max my-auto mx-auto px-5">
				<h1 class="text-4xl mb-10">Выбери</h1>
				<ul class="grid grid-cols-2 gap-10">
					{
						links.map((item) => (
						<li
							class="grid aspect-square p-3 rounded-3xl text-7xl text-white items-center justify-center relative"
							style={`background-color:${item.color}`}
						>
							<span>
								{item.short}
							</span>
							<a class="after:inset-0 text-sm after:absolute" href={item.link}>
								<span class="sr-only">
									{item.title}
								</span>
								{item.title}
							</a>
						</li>
						))
					}
				</ul>
			</div>
		</section>
	</body>
</html>
